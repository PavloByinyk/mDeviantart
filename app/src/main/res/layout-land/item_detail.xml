<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorGrayTransparent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

        <TextView
            android:id="@+id/tv_author_name"
            style="@style/Label.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_author"
            android:layout_alignLeft="@+id/iv_author"
            android:layout_alignEnd="@+id/iv_author"
            android:layout_alignRight="@+id/iv_author"
            android:layout_centerVertical="true"
            tools:text="User User"
            android:padding="@dimen/margin_small"
             />

        <TextView
            android:id="@+id/tv_url"
            style="@style/Label.Url"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_image_title"
            android:layout_alignParentStart="true"
            android:padding="@dimen/margin_small"
            tools:text="ww.wwwwwewwww.wwww"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/margin_small"/>


        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_author_name"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/tv_author_name"
            />

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/iv_main"
            android:layout_toEndOf="@+id/tv_author_name"
            android:background="@color/colorGrayTransparent"
            android:layout_toRightOf="@+id/tv_author_name"
            />

        <TextView
            android:id="@+id/tv_image_title"
            style="@style/Label.ImageInfo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_toEndOf="@+id/tv_author_name"
            android:layout_toRightOf="@+id/tv_author_name" />

        <TextView
            android:id="@+id/tv_image_likes"
            style="@style/Label.ImageInfo.Likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_main"
            android:layout_alignEnd="@+id/iv_main"
            android:layout_alignRight="@+id/iv_main"
            android:drawableRight="@drawable/ic_favorite"
            android:gravity="right" />


    </RelativeLayout>


</RelativeLayout>